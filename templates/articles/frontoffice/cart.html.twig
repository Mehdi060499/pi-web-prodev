                                        <script>
                                            function updateTotalAmount() {
                                                var quantities = document.querySelectorAll('.quantityInput');
                                                var totalAmounts = document.querySelectorAll('.totalAmount');
                                                // Parcourez chaque élément de quantité et mettez à jour le montant total correspondant
                                                for (var i = 0; i < quantities.length; i++) {
                                                    var quantity = parseInt(quantities[i].value);
                                                    var prix = parseFloat("{{ article.prix }}");
                                                    var totalAmount = quantity * prix;
                                                    totalAmounts[i].textContent = totalAmount.toFixed(2) + ' TND';
                                                }
                                            }
                                            // Ajoutez un événement de changement à chaque champ de quantité
                                            var quantities = document.querySelectorAll('.quantityInput');
                                            for (var i = 0; i < quantities.length; i++) {
                                                quantities[i].addEventListener('change', updateTotalAmount);
                                            }
                                            // Appelez la fonction initiale pour mettre à jour les montants totaux au chargement de la page
                                            updateTotalAmount();

