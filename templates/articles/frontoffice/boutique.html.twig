        <!-- Script JavaScript pour trier les articles -->
        <script>
            document.getElementById('triArticles').addEventListener('change', function() {
                var tri = this.value;
                var articles = document.querySelectorAll('.col-md-3');
                var articlesArray = Array.prototype.slice.call(articles);

                articlesArray.sort(function(a, b) {
                    var aData = a.querySelector('.card-title').innerText;
                    var bData = b.querySelector('.card-title').innerText;

                    if (tri === 'nom') {
                        return aData.localeCompare(bData);
                    } else if (tri === 'prix') {
                        var aPrix = parseFloat(a.querySelector('.card-text').innerText);
                        var bPrix = parseFloat(b.querySelector('.card-text').innerText);
                        return aPrix - bPrix;
                    }
                });

                var container = document.querySelector('.row');
                container.innerHTML = '';
                articlesArray.forEach(function(elem) {
                    container.appendChild(elem);
                });
            });
        </script>



