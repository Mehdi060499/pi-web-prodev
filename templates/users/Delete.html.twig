{% extends 'back.html.twig' %}

{% block title %}
   Delete
{% endblock %}

{% block ktiba %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="m-b-0 text-white">DELETE (<small>With ID</small>)</h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal form-bordered'}}) }}
                    <div class="form-body">
                        <div class="form-group row">
                            {{ form_label(form.id, 'ID', {'label_attr': {'class': 'control-label text-right col-md-3'}}) }}
                            <div class="col-md-9">
                                {{ form_widget(form.id, {'attr': {'class': 'form-control', 'placeholder': 'Enter User ID'}}) }}
                                {{ form_errors(form.id) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="offset-sm-3 col-md-9">
                                        {{ form_widget(form.delete, {'attr': {'class': 'btn btn-success'}}) }}
                                        {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-inverse'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
