                                        {% endif %}
                                         {% endfor %}
                                             <p>{{vendeur.nom}} </p>
                                             <p>{{vendeur.nomproduit}} </p>
                                             <p>{{vendeur.email}} </p>
                                             <p>{{vendeur.motdepasse}} </p>
                                             <p>{{vendeur.description}} </p>
                                             <p>{{vendeur.type}} </p>
                                              <p> <a href="{{ path('app_update', {'id': vendeur.IdVendeur}) }}">edit</a></p> 
                                             <p>{{ include('vendeur/delete.html.twig') }} </p>
                                             <p> <a href="{{ path('app_stock_new', {'vendeurId': vendeur.IdVendeur}) }}">insert to Stock</a></p> 


                                        </div>
                                    </div>
                                </div>
