{% for vendeur in vendeurs %}
    <div class="row">
        <div class="col-lg-4 col-md-3"><img src="{{ asset('uploads/' ~ vendeur.image) }}" class="img-fluid" /></div>
        <div class="col-lg-8 col-md-9" id="slimtest1" style="height: 250px;">
            <div>
          
                <h5 style="color: green;">This product is already added to the Database</h5>
               
                <p>{{ vendeur.nom }}</p>
                <p>{{ vendeur.nomproduit }}</p>
                <p>{{ vendeur.email }}</p>
                <p>{{ vendeur.motdepasse }}</p>
                <p>{{ vendeur.description }}</p>
                <p>{{ vendeur.type }}</p>
                <a class="btn btn-primary" href="{{ path('app_update', {'id': vendeur.IdVendeur}) }}" role="button">edite</a> 
                <a class="btn">{{ include('vendeur/delete.html.twig') }}</a>
                <a class="btn btn-primary" href="{{ path('app_stock_new', {'vendeurId': vendeur.IdVendeur}) }}" role="button">insert into stock</a>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
{% endfor %}
